
@model ProjectManager.Web.Models.ProjectModel

@{
    ViewData["Title"] = $"{Model.Name}";
}



<div class="card shadow">

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow shadow mb-3">
        <div class="container">
            <!---Add the project logo in here-->
            <a class="navbar-brand" asp-area="" asp-controller="ProjectDetails" asp-action="index" asp-route-projectId="@Model.Id">
                @*<img src="~/img/logo1.png" alt="logo icon">*@
                <i class="bi bi-layout-three-columns"></i>
                @ViewData["Title"]
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-route="ProjectDetails" asp-action="List">List</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Project" asp-action="Index">Projects</a>
                        </li>
                </ul>
        </div>
    </nav>
    <div class="card-body">

    </div>
</div>

