@model ProjectManager.Web.ViewModels.MemberIndexViewModel

@{
    ViewData["Title"] = "Users Page";
}

<div class="modal fade" tabindex="-1" role="dialog" id="deleteMembermodal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title text-left">Delete Member</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <strong class="text-danger">Are you sure you want to delete this Member?</strong>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
                <a id="deleteConfirmationSubmit" href="~/" class="btn btn-outline-danger">Delete</a>

            </div>

        </div>
    </div>
</div>

<div class="card shadow">

    <h4 class="card-title" style="margin-left:1.25rem; margin-top:1.25rem;">
        <strong>@ViewData["Title"]</strong>
    </h4>

    <div class="card-body">
        @*<div>
            <a class="btn btn-outline-primary" asp-action="CreateMember">Add Member</a>
        </div>
        <hr />*@
        <table class="table">
            <thead>
                <tr class="col-12">
                    <th class="col-5 text-left">Name</th>
                    <th class="col-5 text-left">Email</th>
                    <th class="text-right col-2">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var member in Model.Members)
                {
                    <tr>
                        <td>@member.UserName</td>
                        <td>@member.Email</td>
                        <td class="text-right">
                            @*<a class="btn btn-outline-info">Edit</a>*@
                            <button id="submitDelete" class="btn btn-outline-danger" data-target="#deleteMembermodal" data-toggle="modal"
                                    onclick="window.click(this)" asp-controller="Account" asp-action="DeleteUser" asp-route-id="@member.Id">
                                Delete
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


</div>

