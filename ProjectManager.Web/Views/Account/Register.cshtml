
@model ProjectManager.Web.ViewModels.AccountRegisterationViewModel

<form class="card" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <h4 class="card-title" style="margin-left:1.25rem; margin-top:1.25rem;"><strong>Create a new account.</strong></h4>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="card-body">
        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.ConfirmPassword"></label>
            <input asp-for="Input.ConfirmPassword" class="form-control" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="card-footer text-left">
        <button type="submit" class="btn btn-primary">Register</button>
    </div>
</form>