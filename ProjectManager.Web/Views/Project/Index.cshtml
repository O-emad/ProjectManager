@model ProjectManager.Web.ViewModels.ProjectIndexViewModel

@{
    ViewData["Title"] = "Project Page";
}

<div class="modal fade" tabindex="-1" role="dialog" id="deleteProjectmodal">
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title text-left">Delete Project</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <strong class="text-danger">Are you sure you want to delete this project?</strong>
        </div>

        <div class="modal-footer">
            <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
            <a id="deleteConfirmationSubmit" href="~/" class="btn btn-outline-danger">Delete</a>

        </div>

    </div>
</div>
</div>

<div class="card shadow">

    <h4 class="card-title" style="margin-left:1.25rem; margin-top:1.25rem;">
        <strong>@ViewData["Title"]</strong>
    </h4>

    <div class="card-body">
        @if (User.IsInRole("Admin")) { 
        <div>
            <a class="btn btn-outline-primary" asp-action="CreateProject">Add Project</a>
        </div>
        <hr />
        }
        <table class="table">
            <thead>
                <tr class="col-12">
                    <th class="text-left col-9">Name</th>
                    <th class="text-right col-3">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var project in Model.Projects)
                {
                    <tr>
                        <td>@project.Name</td>
                        <td class="text-right">
                            <a class="btn btn-outline-info" asp-action="ProjectDetails" asp-route-id="@project.Id">Details</a>
                            @if (User.IsInRole("Admin"))
                            {
                            <a class="btn btn-outline-warning" asp-action="EditProject" asp-route-id="@project.Id">Edit</a>

                            <button id="submitDelete" class="btn btn-outline-danger" data-target="#deleteProjectmodal" data-toggle="modal"
                                    onclick="window.click(this)" asp-controller="Project" asp-action="DeleteProject" asp-route-id="@project.Id">
                                Delete
                            </button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>